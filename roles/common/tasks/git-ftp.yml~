---
- name: Clone git-ftp from Github
  git:
    repo: "git://github.com/git-ftp/git-ftp.git"
    dest: "/setup/git-ftp"
    force: no
    accept_hostkey: yes
  when: result.rc !=0
  tags: git-ftp
  sudo: no

- name: Compile with make install
  command: "make install"
  sudo: yes
  args:
    chdir: /setup/git-ftp
  when: result.rc !=0
  tags: git-ftp

